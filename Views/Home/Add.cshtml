@{
}
@model Item

<form method="post">
    <input type="hidden" asp-for="ItemId" />
    <br />
    <label asp-for="ItemName">Task Name:</label>
    <input asp-for="ItemName" />
    <br />
    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate" />
    <br />
    <label asp-for="Priority">Priority:</label>
    <select asp-for="Priority">
        <option value="1">Urgent Important</option>
        <option value="2">Urgent Not Important</option>
        <option value="3">Not Urgent Important</option>
        <option value="4">Not Urgent Not Important</option>
    </select>
    <br />
    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId">
        <option value=""></option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Completed">Completed</label>
    <select asp-for="Completed">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <button class="btn btn-info" type="submit">Add New Task</button>
</form>