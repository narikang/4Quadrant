@{
    ViewData["Title"] = "Home Page";
}

@model List<Item>



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div class="matrix">
    <!-- Urgent & Important -->
    <div class="quadrant urgent-important">
        <h2>Urgent & Important</h2>
        <div class="task-container">
            @foreach (var x in Model)
            {
                @if ( x.Priority == 1)
                {
                    <div class="task">
                        <!-- Display properties of the task -->
                        <p>Item Name: @x.ItemName</p>
                        <p>Due Date: @x.DueDate</p>
                        <p>Priority: @x.Priority</p>
                        <p>Category ID: @x.CategoryId</p>

                        <!-- Edit and delete buttons -->
                       
                    </div>
                }
            }
        </div>
    </div>

    <!-- Not Urgent & Important -->
    <div class="quadrant not-urgent-important">
        <h2>Not Urgent & Important</h2>
        <div class="task-container">
            @foreach(var x in Model)
            {
                @if (x != null && x.Priority == 3)
                {
                    <div class="task">
                        <!-- Display properties of the task -->
                        <p>Item Name: @x.ItemName</p>
                        <p>Due Date: @x.DueDate</p>
                        <p>Priority: @x.Priority</p>
                        <p>Category ID: @x.CategoryId</p>

                        <!-- Edit and delete buttons -->
                        
                    </div>
                }
            }
        </div>
    </div>

    <!-- Urgent & Not Important -->
    <div class="quadrant urgent-not-important">
        <h2>Urgent & Not Important</h2>
        <div class="task-container">
            @foreach(var x in Model)            
            {
                @if (x != null && x.Priority == 2)
                {
                    <div class="task">
                        <!-- Display properties of the task -->
                        <p>Item Name: @x.ItemName</p>
                        <p>Due Date: @x.DueDate</p>
                        <p>Priority: @x.Priority</p>
                        <p>Category ID: @x.CategoryId</p>

                        <!-- Edit and delete buttons -->
                        
                    </div>
                }
            }
        </div>
    </div>

    <!-- Not Urgent & Not Important -->
    <div class="quadrant not-urgent-not-important">
        <h2>Not Urgent & Not Important</h2>
        <div class="task-container">
          @foreach(var x in Model)
            {
                @if (x != null && x.Priority == 4)
                    {
                        <div class="task">
                            <!-- Display properties of the task -->
                            <p>Item Name: @x.ItemName</p>
                            <p>Due Date: @x.DueDate</p>
                            <p>Priority: @x.Priority</p>
                            <p>Category ID: @x.CategoryId</p>

                            <!-- Edit and delete buttons -->
                            
                        </div>
                    }
            }
        </div>
    </div>
</div>